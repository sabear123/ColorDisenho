@{
    ViewData["Title"] = "Iniciar Sesión";
}
<div class="text-center">
    <h1>@ViewData["Title"]</h1>

    <form>
        <!-- Email input -->
        <div class="form-outline mb-4 col-7">
            <div class="form-center">
            <input type="email" id="form2Example1" class="form-control" placeholder="Correo electrónico" />
            </div>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4 col-7">
            <input type="password" id="form2Example2" class="form-control" placeholder="Contraseña" />
        </div>

        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
            <div class="col d-flex justify-content-center">
                <!-- Checkbox -->
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                    <label class="form-check-label" for="form2Example31"> Recuerdame </label>
                </div>
            </div>

            <div class="col">
                <!-- Simple link -->
                <a href="#!">¿Olvidó la contaseña?</a>
            </div>
        </div>

        <!-- Submit button -->
        <div class="text-center">
            <a class="btn btn-success btn-block mb-4" href="https://localhost:7137/Home/MenuAdmin">
                Ingresar
            </a>
        </div>


        <!-- Register buttons -->
        <div class="text-center">
            <p>¿No estás registrado?s <a href="#!">Registrarme</a></p>
        </div>
    </form>

</div>
